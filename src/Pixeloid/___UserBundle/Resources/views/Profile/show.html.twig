{% extends '::base.html.twig' %}

{% block body -%}

	<h1><span>Regisztrációim</span></h1>



	<table class="table table-condensed">
		
		{% for reg in user.getEventRegistrations %}
		    <tr>
		    	<td>{{reg.id}}</td>
		    	<td>{{reg.getCreated.format('Y. m. d.')}}</td>
		    	<td>{{reg.getEvent.getTagline}}</td>
		    	<td><a href="{{path('eventregistration_show', {'id' : reg.getId})}}" class="btn btn-primary">Megnézem</a></td>
		    </tr>
		{% endfor %}
		
	</table>
{% endblock %}
