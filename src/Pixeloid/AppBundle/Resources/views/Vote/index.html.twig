{% extends "::base.html.twig" %}


{% block title %} – Közönségszavazás{% endblock %}

{% block body %}


{% if not is_granted('ROLE_USER')  %}

        <div class="col-md-4 col-md-offset-4 text-center">
            <div class="">
                <a class="btn btn-block btn-social btn-lg btn-facebook" href="{{ hwi_oauth_login_url('facebook') }}">
                    <i class="fa fa-facebook"></i> Belépés a Facebook fiókoddal
                </a>
            </div>
        </div>

        {% endif %}

	{% for video in videos %}

		<div class="col-sm-3">
			<a href="{{path('vote_show', {'id' : video.id})}}" class="show-video">
			<span class="video-item">
			{% include 'PixeloidAppBundle:Vote:_video_list_item.html.twig' with {video: video, size: 'hqdefault'} only %}
			</span>
			</a>
		</div>    

	{% endfor %}

	<div id="modal"></div>

{% endblock %}

