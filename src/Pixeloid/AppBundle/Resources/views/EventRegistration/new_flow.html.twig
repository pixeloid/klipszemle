{% extends '::base.html.twig' %}


{% block body -%}

<div class="container">
<div class="row">
    <div class="col-sm-12">

<!--         <h1><span>Event Registration</span></h1>
 -->
        <div class="">
            {% include 'PixeloidAppBundle:FormFlow:stepList.html.twig' %}
        </div>


        {{ form_start(form, {attr: {'data-calculate-url': path('eventregistration_calculate'), 'class': 'eventregistration-form' }}) }}

        {% if flow.getCurrentStepNumber() == 1 %}
        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.email) }}
            </div>

        </div>
        <div class="row">
            <div class="col-sm-4">
                {{ form_row(form.title) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.company) }}
            </div>

            <div class="col-sm-4">
                {{ form_row(form.website) }}
            </div>

        </div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.phone) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.address) }}
            </div>

        </div>

<!--         <div class="alert alert-success">A továbbképző napon <b>12 kreditpont</b>, a tudományos ülésen való részvétellel <b>30 kreditpont</b> szerezhető. Szakdolgozók részére <b>20 kreditpont</b> szerezhető.</div>

 -->        {% elseif flow.getCurrentStepNumber() == 2 %}


    <div class="row">
        <div class="col-sm-5">
            {{ form_row(form.author) }}
        </div>
        <div class="col-sm-5">
            {{ form_row(form.song_title) }}
        </div>

        <div class="col-sm-2">
            {{ form_row(form.length) }}
        </div>


    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_row(form.publisher) }}
        </div>

        <div class="col-sm-4">
            {{ form_row(form.song_publish_date) }}
        </div>

        <div class="col-sm-4">
            {{ form_row(form.video_publish_date) }}
        </div>

    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_row(form.producer) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.director) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.photographer) }}
        </div>

    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_row(form.designer) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.editor) }}
        </div>
        <div class="col-sm-4">
      {{ form_row(form.technology) }}
        </div>

    </div>
    <div class="row">
        <div class="col-sm-6">
        {{ form_row(form.budget) }}
        {{ form_row(form.description) }}
        {{ form_row(form.video_url) }}


        </div>
        <div class="col-sm-6">
            {{ form_row(form.categories) }}
        </div>

    </div>

        {% elseif flow.getCurrentStepNumber() == 3 %}



            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.have_rights) }}
                </div>

                <div class="col-sm-6">
                    {{ form_row(form.accept_terms) }}
                </div>

            </div>

            <div class="row">

                <div class="col-sm-8">
                <div class="">
                <h4>Ellenőrzés</h4>
                <p>Kérjük hogy az alábbi mezőt pipálja ki, mellyel megbizonyosodunk róla hogy valós a jelentkezése!</p>
                {{ form_widget(form.recaptcha) }}
                {{ form_errors(form.recaptcha) }}
                </div>
                </div>
            </div>     
        {% endif %}

        {{ form_rest(form) }}
        <hr>

        {% include 'PixeloidAppBundle:FormFlow:buttons.html.twig' %}

        {{ form_end(form) }}

    </div>



</div>







  
</div>
{% endblock %}
