<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title></title>
</head>
<body>


<h3>Dear {{ entity.firstname }} {{ entity.lastname }},</h3>

<p>We are pleased to confirm your registration and accommodation for the European Society of Paeditric Clinical Research 24<sup>th</sup> Meeting.</p>

<table width="100%" border="0">
<tr>
    <td><h3>Your personal details</h3></td>
    <td><h3>Your accomodation reservation</h3></td>
</tr>
<tr>
    <td valign="top">
        
        <table  border="1" cellspacing="0" width="100%">
            <tbody>
                <tr>
                    <td>Name: </td>
                    <td>{{ entity.title }} {{ entity.firstname }} {{ entity.lastname }}</td>
                </tr>
                <tr>
                    <td>Institution: </td>
                    <td>{{ entity.institution }}</td>
                </tr>
                <tr>
                    <td>Address: </td>
                    <td>{{ entity.address }} <br> {{ entity.city }} <br>{{ entity.country }} {{ entity.postal }}  <br></td>
                </tr>
                <tr>
                    <td>Phone: </td>
                    <td>{{ entity.phone }}</td>
                </tr>
                <tr>
                    <td>Fax: </td>
                    <td>{{ entity.fax }}</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{ entity.email }}</td>
                </tr>
            </tbody>
        </table>
        
    </td>

    <td  valign="top">
        
        {% if entity.reservation %}
        <table  border="1" cellspacing="0"  width="100%">
            <tbody>
                <tr>
                    <td>Accomodation:</td>
                    <td>{{ entity.reservation.accomodation.name }}</td>
                </tr>
                <tr>
                    <td>Check-in: </td>
                    <td>{{ entity.reservation.checkIn.format('Y-m-d') }}</td>
                </tr>
                <tr>
                    <td>Check-out: </td>
                    <td>{{ entity.reservation.checkOut.format('Y-m-d') }}</td>
                </tr>
                <tr>
                    <td>Room type: </td>
                    <td>{{ entity.reservation.roomType }}  <br></td>
                </tr>
                <tr>
                    <td>Persons: </td>
                    <td>{{ entity.reservation.persons }}</td>
                </tr>
                <tr>
                    <td>Total cost: </td>
                    <td>{{ entity.reservation.getTotalCost() }} EUR</td>
                </tr>
            </tbody>
        </table>
        {% else %}
            No accomodation reservation
        {% endif %}

    </td>
</tr>
</table>

