{% extends 'base.html.twig' %}
{% block body %}


<div class="heroes">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for hero in heroes %}
        <div class="swiper-slide">
          <div class="hero">
              <div class="container">
                  {% if hero.title %}
                      <div class="grid">
                          <div class="col col--1">
                              <div class="hero__content">
                                  <h1><span>{{ hero.title }}</span></h1>
                                  <p>{{ hero.description }}</p>
                                  <a href="{{ hero.url }}" class="btn btn-primary">{{ hero.buttontext }}</a>
                              </div>
                          </div>
                          <div class="col col--2">
                              {% media hero.image, 'big' with {'srcset': ['small', 'big'], class: "img-responsive"} %}
                          </div>
                      </div>
                      {% else %}
                          <a href="{{ hero.url }}" >

                          {% media hero.image, 'big' with {'srcset': ['small', 'big'], class: "img-responsive"} %}
                          </a>
                  {% endif %}

              </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
