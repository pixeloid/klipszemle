{% if sponsors %}
    <div class="sponsors">
        <h2>Partnereink</h2>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                {% for sponsor in sponsors %}
                    <div class="swiper-slide">
                        <div class="sponsor">
                            <a href="{{ sponsor.url }}" target="_blank">
                                {{ sonata_thumbnail(sponsor.image, 'med', { class: "img-responsive" }) }}
                                <p>{{ sponsor.name }}</p>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
