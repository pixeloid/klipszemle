{% extends 'base.html.twig' %}

{% block body -%}
    <h1><span>Event Registration</span></h1>

    {% if is_granted('EVENTREGISTRATION_CREATE') %}


{{ form_start(form, {attr: {'data-calculate-url': path('eventregistration_calculate') }}) }}
    <div class="row">
        <div class="col-sm-1">
            {{ form_row(form.title) }}
        </div>
        <div class="col-sm-3">
            {{ form_row(form.firstname) }}
        </div>

        <div class="col-sm-3">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col-sm-5">
            {{ form_row(form.institution) }}
        </div>

    </div>
    <div class="row">
        <div class="col-sm-2">
            {{ form_row(form.country) }}
        </div>
        <div class="col-sm-2">
            {{ form_row(form.postal) }}
        </div>

        <div class="col-sm-3">
            {{ form_row(form.city) }}
        </div>
        <div class="col-sm-5">
            {{ form_row(form.address) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_row(form.email) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.phone) }}
        </div>

        <div class="col-sm-4">
            {{ form_row(form.fax) }}
        </div>
    </div>
            <h2>Available accomodation options</h2>
    <div class="row">
        <div class="col-sm-7">
            <table class="table table-condensed table-decorated">
                <tbody>
                    <tr>
                        <th class="text-right">Hotel</th>
                        <th valign="bottom">Map</th>
                        <th><b>Single room</b><br>EUR / night</th>
                        <th><b>Double room</b><br>EUR / night</th>
                    </tr>


                    {% for acc in accomodations %}
                        <tr>
                            <td class="name"><b>{{acc.name}}</b> <br> <small>({{acc.address}})</small></td>
                            <td><a href="#" data-toggle="modal" data-target="#mapModal" class="show-map">Show map</a></td>
                            <td>{{acc.priceSingle}} EUR</td>
                            <td>{{acc.priceDouble}} EUR</td>
                        </tr>

                    {% endfor %}
                </tbody>
            </table>

        </div>

        <div class="col-sm-5">
            
            {{ form_row(form.reservation.accomodation) }}

            <div class="row  accomodation-selected">
                <div class="col-sm-6">
                            <div class="bootstrap-date">
                                {{ form_row(form.reservation.checkIn) }}
                            </div>
                </div>

                <div class="col-sm-6">
                            <div class="bootstrap-date">
                                {{ form_row(form.reservation.checkOut) }}
                            </div>
                </div>


            </div>

            <div class="row  accomodation-selected">
                <div class="col-sm-6">
                        {{ form_row(form.reservation.roomType) }}
                </div>

                <div class="col-sm-6">
                        {{ form_row(form.reservation.persons) }}
                </div>
            </div>
            

            <div class="panel panel-default accomodation-selected">
                <div class="panel-body">
                    <h3>Total: <span class="num-nights"></span> nights, <span class="price-total">0</span> EUR</h3>
                </div>
            </div>


        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-4">
            {{ form_row(form.recaptcha) }}
        </div>
        <div class="col-sm-8">
           {{ form_widget(form.submit, {attr:{class:'btn-success btn-block btn-lg'}}) }}
        </div>
    </div>     



{{ form_end(form) }}

{% endblock %}
